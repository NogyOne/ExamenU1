<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="53dp"
        android:text="Convertidor de grados"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etCentigrados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/textView2" />

    <EditText
        android:id="@+id/etFaren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/etCentigrados"
        app:layout_constraintTop_toBottomOf="@+id/etCentigrados" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="34dp"
        android:text="C째"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="3dp"
        android:text="F째"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/etFaren"
        app:layout_constraintEnd_toStartOf="@+id/etFaren" />

    <Button
        android:id="@+id/btnCentigrados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:text="C째"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnFaren"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnFaren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="74dp"
        android:text="F째"
        app:layout_constraintStart_toEndOf="@+id/btnCentigrados"
        app:layout_constraintTop_toBottomOf="@+id/etFaren" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="70dp"
        android:text="Reset"
        app:layout_constraintEnd_toEndOf="@+id/btnFaren"
        app:layout_constraintStart_toStartOf="@+id/btnCentigrados"
        app:layout_constraintTop_toBottomOf="@+id/btnCentigrados" />

</androidx.constraintlayout.widget.ConstraintLayout>